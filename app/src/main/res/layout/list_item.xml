<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Bitcoin"
        android:id="@+id/item_name"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Price: $500"
        android:layout_below="@id/item_name"
        android:layout_marginTop="8dp"
        android:id="@+id/item_price"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rank: 1"
        android:id="@+id/item_rank"
        android:layout_below="@id/item_price"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_price_change"
        android:layout_toEndOf="@id/item_price"
        tools:text="Price change 24 hrs: +5.00%"
        android:layout_below="@id/item_name"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/item_price"
        android:layout_marginLeft="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_price_to_btc"
            android:layout_toEndOf="@id/item_price"
            tools:text="Price to BTC: 0.0056"
            android:layout_below="@id/item_price"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/item_price"
            android:layout_marginLeft="25dp" />


    </RelativeLayout>
</RelativeLayout>